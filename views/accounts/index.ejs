<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <h3>My Accounts</h3>
                <a href="/accounts/add" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Add New Account
                </a>
            </div>
            <div class="card-body">
                <% if(accounts.length > 0) { %>
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Account Name</th>
                                    <th>Account Number</th>
                                    <th>Email</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% accounts.forEach(function(account) { %>
                                    <tr>
                                        <td><%= account.accountName %></td>
                                        <td><%= account.accountNumber %></td>
                                        <td><%= account.email %></td>
                                        <td>
                                            <a href="/accounts/edit/<%= account._id %>" class="btn btn-sm btn-info">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <form action="/accounts/delete/<%= account._id %>" method="POST" class="d-inline">
                                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this account?')">
                                                    <i class="fas fa-trash"></i>
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                <% }); %>
                            </tbody>
                        </table>
                    </div>
                <% } else { %>
                    <div class="text-center">
                        <p>No accounts found. Add your first account!</p>
                        <a href="/accounts/add" class="btn btn-primary">Add Account</a>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
</div> 